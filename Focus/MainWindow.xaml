<Window x:Class="Focus.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Focus"
		mc:Ignorable="d"
		Title="Focus" Width="320" Height="240" MinWidth="320" MinHeight="240">
	<Grid>
		<StackPanel Margin="5">
			<Button Margin="5" Padding="30" Name="cmdFocus">Focused</Button>
			<Button Margin="5" Padding="30">Not Focused</Button>
		</StackPanel>
	</Grid>
</Window>